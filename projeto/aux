int main(int argc, char *argv[]) {
    bool lex_only = false;
    bool tree_only = false;

    // Process command line arguments
    for (int i = 1; i < argc; i++) {
        if (strcmp(argv[i], "-l") == 0) {
            lex_only = true;
        } else if (strcmp(argv[i], "-t") == 0) {
            tree_only = true;
        }
    }

    if (lex_only) {
        // Realizar apenas análise léxica
        while (yylex());
    } else {
        // Realizar análise sintática
        yyparse();

        if (tree_only) {
            // Realizar alguma ação para construir a árvore, se necessário
            // A lógica para construir a árvore seria aqui
        }
    }

    // Verificação de arquivo vazio deveria ser feita de outra forma
    // Talvez verificando o status do arquivo antes de executar yylex ou yyparse
    if(yywrap()==1){
		syn_column++;
		if (empty_file) {
			yyerror();
		}
	}

    return 0;
}